         ]]>
    </insert>
    
    <!-- 카카오 회원가입 2 관심사 입력 -->
    <insert id="insertkakaoUserCategory">
    <![CDATA[
        INSERT INTO Usercategory 
         VALUES (Usercategory_seq.nextval, #{id}, #{category})
        ]]>
    </insert>
	
	<!-- 카카오 아이디 가입여부 확인 -->
	<select id="kakaoIDCheck" resultType="String">
	<![CDATA[
		select id from users where id = #{id}
	]]>
	</select>
	
	<!-- 네이버 회원가입 1 -->
